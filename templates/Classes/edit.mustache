<div class="p-3 mb-2 ">
<h1 class="display-6">Edit Class Record</h1>
<form method="POST" action="../classes/edit.php">
    {{#class}}
    <input type="hidden" name="id" id="id" value="{{ id }}">
    <div class="input-group mb-3">
      <span class="input-group-text" id="inputGroup-sizing-default">Class Name</span>
      <input type="text" name="name" id="name" value="{{ name }}" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
    </div>
    <div class="input-group mb-3">
      <span class="input-group-text" id="inputGroup-sizing-default">Class Code</span>
      <input type="text" name="class_code" id="class_code" value="{{ class_code }}" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
    </div>
    <div class="input-group mb-3">
      <span class="input-group-text" id="inputGroup-sizing-default">Description</span>
      <input type="text" name="description" id="description" value="{{ description }}" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
    </div>
    <div class="form-group">
        <label for="employee_number">Teacher ID:</label>
            <select name="employee_number" id="employee_number">
                <option value="{{employee_number}}"></option>
                {{# all_teachers }}
                <option value="{{employee_number}}">{{first_name}} {{last_name}}</option>
                {{/ all_teachers }}
            </select>
            </div>
        </div>
    {{/class}}
    <button id="submit" class= "btn btn-primary" type="submit">Confirm Changes</button>
